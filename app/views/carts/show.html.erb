	<!--================Cart Area =================-->
	<section class="cart_area">
		<div class="container">
			<div class="cart_inner">
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Items</th>
								<th scope="col">Description</th>
								<th scope="col">Price</th>
								<th scope="col">Quantity</th>	
								<th scope="col">Total</th>
							</tr>
						</thead>
						<tbody>
							<% @items.each do |item| %>
							<tr>
								<td style="background-image: url('<%=item.image_url%>'); background-size: cover; color: white;">
									<div class="media">
										
										<div class="media-body">
											<p><%= item.title %></p>
										</div>
									</div>
								</td>
								<td>
									<div>
										<%= item.description %><br>
										<%= button_to 'remove', user_item_item_to_cart_path(@user.id, item.id, ItemToCart.where(item_id: item.id, cart_id: @user.carts.last.id).first.id), method: :delete, data: {confirm: "Are you sure ?"}, class: "btn btn-danger", remote: true %>
									</div>
								</td>
								<td>
									<h5>$<%= item.price %></h5>
								</td>
								<!-- <td>
									<div class="product_count">
										<input type="text" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
										<button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
										 class="increase items-count" type="button">
											<i class="lnr lnr-chevron-up"></i>
										</button>
										<button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
										 class="reduced items-count" type="button">
											<i class="lnr lnr-chevron-down"></i>
										</button>
									</div>
								</td> -->
								<td>
									<%= ItemToCart.where(cart_id: @user.carts.last.id, item_id: item.id).length %>
								</td>
								<td>
									<h5>$<%= item.price * ItemToCart.where(cart_id: @user.carts.last.id, item_id: item.id).length %></h5>
								</td>
							</tr>
							<% end %>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
	<!--================End Cart Area =================-->

