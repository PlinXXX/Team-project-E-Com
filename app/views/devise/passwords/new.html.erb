<div class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="banner_content text-center">
      </div>
    </div>
  </div>
</div>
<div class="container forgot_password">
	<div>
		<h2>Forgot your password?</h2>	
	</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form_control", placeholder: "Entrez une email valide"%>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" , class: "btn btn-danger"%>
  </div>
<% end %>
<div class="input_user">
	<%= render "devise/shared/links" %>
</div>
</div>