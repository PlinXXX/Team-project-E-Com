	<!--================Single Product Area =================-->
	<div class="product_image_area">
		<div class="container">
			<div class="row s_product_inner">
				<div class="col-lg-6">
					<div class="s_product_img">
						<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
						
							<div class="carousel-inner" id="<%= @item.id %>">
								<div class="carousel-item active">
									<img class="d-block w-100" src="<%= @item.image_url%>" alt="First slide">
								</div>
								<div class="carousel-item">
									<img class="d-block w-100" src="<%= @item.image_url%>" alt="Second slide">
								</div>
								<div class="carousel-item">
									<img class="d-block w-100" src="<%= @item.image_url%>" alt="Third slide" >
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-5 offset-lg-1">
					<div class="s_product_text">
						<h3><%= @item.title %></h3>
						<h2>Prix <%= @item.price %></h2>
						<ul class="list">
							
							
						</ul>
						<p><%= @item.description %></p>
					
						<div class="card_area">
							<a id="add_button" class="main_btn" href="/users/<%= current_user.id %>/items/<%=@item.id%>/item_to_carts" data-method="POST" data-remote="true">Ajouter aux paniers</a>
							<a class="icon_btn" href="#">
								<i class="fa fa-heart-o"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--================End Single Product Area =================-->

